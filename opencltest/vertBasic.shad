#version 400

in vec3 VertexPosition;
in vec3 VertexColor;

out vec3 Color;


uniform mat4 WorldToScreenTransform;
uniform mat4 LocalTransform;
uniform vec3 ColorShade;

uniform vec2 worldLocations[512]; 

void main()
{
   Color = ColorShade;

   vec2 worldLocation = worldLocations[gl_InstanceID];

   gl_Position = WorldToScreenTransform * vec4((worldLocation + VertexPosition.xy), 0.0, 1.0);



}